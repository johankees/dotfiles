root = true

[*]
indent_style = space
indent_size = 4
char_set = utf-8
insert_final_newline = true
max_line_length = 80

[*.{js,json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{hcl,tf}]
indent_size = 2

[*.md]
indent_size = 4
max_line_length = 120

[{Makefile,config,*.config,.zshrc,scripts/*}]
indent_style = tab
